<% @merchants.each do |merchant| %>
<section id="merchant-<%= merchant.id %>">
  <%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>
  <%= merchant.city %>
  <%= merchant.state %>
  <% if merchant.active? %>
    <%= button_to 'Disable', "/admin/merchants/#{merchant.id}?active=false", method: :patch %>
  <% else %>
    <%= button_to 'Enable', "/admin/merchants/#{merchant.id}?active=true", method: :patch %>
  <% end %>
</section>
<% end %>
