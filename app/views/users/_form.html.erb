<%= form_tag path, method: method do  %>
  <%= label_tag :name %>
  <%= text_field_tag :name, name %>
  <%= label_tag :address %>
  <%= text_field_tag :address, address %>
  <%= label_tag :city %>
  <%= text_field_tag :city, city %>
  <%= label_tag :state %>
  <%= text_field_tag :state, state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, zip %>
  <%= label_tag :email %>
  <%= text_field_tag :email, email %>
  <%= label_tag :password %>
  <%= text_field_tag :password, password %>
  <%= label_tag :confirm_password %>
  <%= text_field_tag :confirm_password, confirm_password %>
  <%= submit_tag button_text %>
<% end %>
